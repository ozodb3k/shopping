<div class="row">
    <div class="col s6  offset-s3">
        <div class="card">
            <div class="card-image">
                <img src={{book.img}} alt={{book.img}}>
                <span class="card-title" style="color: black;">{{book.name}} - {{book.price}}$</span>
            </div>
            <div class="card-content">
                <p>{{book.year}}</p>
            </div>
            <div class="card-action">

                <a class="btn btn-danger" href="/korzina/book/{{book.id}}/true" style="background: #ffcc00;">Add to korzina</a>
                <a class="btn btn-danger" href="/api/books/remove/{{book.id}}" style="background: red;">Delete</a>
            </div>
        </div>
    </div>
</div>